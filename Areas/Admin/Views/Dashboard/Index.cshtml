@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
    var totalPosts = (int)ViewBag.TotalPosts;
    var recentPosts = ViewBag.RecentPosts as IEnumerable<ModernBlog.Models.Post>;
}

<div class="row">
    <div class="col-12">
        <h1 class="h3 mb-4">Dashboard</h1>
    </div>
</div>

<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-primary border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="small fw-bold text-primary text-uppercase mb-1">Total de Posts</div>
                        <div class="h5 mb-0">@totalPosts</div>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="bi bi-file-text fs-2 text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-success border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="small fw-bold text-success text-uppercase mb-1">Posts Publicados</div>
                        <div class="h5 mb-0">@totalPosts</div>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="bi bi-check-circle fs-2 text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-info border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="small fw-bold text-info text-uppercase mb-1">Visualizações</div>
                        <div class="h5 mb-0">@(recentPosts?.Sum(p => p.ViewCount) ?? 0)</div>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="bi bi-eye fs-2 text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-warning border-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="small fw-bold text-warning text-uppercase mb-1">Curtidas</div>
                        <div class="h5 mb-0">@(recentPosts?.Sum(p => p.LikeCount) ?? 0)</div>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="bi bi-heart fs-2 text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-file-text me-1"></i>
                Posts Recentes
            </div>
            <div class="card-body">
                @if (recentPosts?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Status</th>
                                    <th>Data</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var post in recentPosts.Take(5))
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(post.FeaturedImageUrl))
                                                {
                                                    <img src="@post.FeaturedImageUrl" alt="@post.Title" class="me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                }
                                                <div>
                                                    <div class="fw-bold">@post.Title</div>
                                                    <div class="small text-muted">@post.Author?.FullName</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (post.IsPublished)
                                            {
                                                <span class="badge bg-success">Publicado</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Rascunho</span>
                                            }
                                        </td>
                                        <td>@post.CreatedAt.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Posts", new { id = post.Id })" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
											<a href="/Home/Post?slug=@post.Slug" class="btn btn-sm btn-outline-secondary" target="_blank">
                                                <i class="bi bi-eye"></i> Ver</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center">
                        <a href="@Url.Action("Index", "Posts")" class="btn btn-primary">Ver Todos os Posts</a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-file-text display-4 text-muted"></i>
                        <p class="text-muted mt-2">Nenhum post encontrado</p>
                        <a href="@Url.Action("Create", "Posts")" class="btn btn-primary">Criar Primeiro Post</a>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-speedometer2 me-1"></i>
                Ações Rápidas
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Create", "Posts")" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Novo Post
                    </a>
                    <a href="@Url.Action("Index", "Posts")" class="btn btn-primary">
                        <i class="bi bi-file-text"></i> Gerenciar Posts
                    </a>
                    <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn btn-outline-secondary" target="_blank">
                        <i class="bi bi-eye"></i> Visualizar Site
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>