
@model IEnumerable<ModernBlog.Models.Post>
@{
    ViewData["Title"] = "Gerenciar Posts";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4 text-dark">
            <h1 class="h3 mb-0">Gerenciar Posts</h1>
            <a href="@Url.Action("Create")" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Novo Post
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-file-text me-1"></i>
                Todos os Posts
            </div>
            <div class="card-body">
                @if (Model?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th>Imagem</th>
                                    <th>Título</th>
                                    <th>Autor</th>
                                    <th>Categoria</th>
                                    <th>Status</th>
                                    <th>Data</th>
                                    <th>Visualizações</th>
                                    <th>Curtidas</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var post in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(post.FeaturedImageUrl))
                                            {
                                                <img src="@post.FeaturedImageUrl" alt="@post.Title" style="width: 50px; height: 50px; object-fit: cover;" class="rounded">
                                            }
                                            else
                                            {
                                                <div class="bg-light d-flex align-items-center justify-content-center rounded" style="width: 50px; height: 50px;">
                                                    <i class="bi bi-image text-muted"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <div>
                                                <strong>@post.Title</strong>
                                                @if (post.IsFeatured)
                                                {
                                                    <span class="badge bg-warning ms-1">Destaque</span>
                                                }
                                            </div>
                                            <small class="text-muted">@(post.Summary?.Length > 50 ? post.Summary.Substring(0, 50) + "..." : post.Summary)</small>
                                        </td>
                                        <td>@post.Author?.FullName</td>
                                        <td>
                                            <span class="badge" style="background-color: @post.Category?.Color">
                                                @post.Category?.Name
                                            </span>
                                        </td>
                                        <td>
                                            @if (post.IsPublished)
                                            {
                                                <span class="badge bg-success">Publicado</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Rascunho</span>
                                            }
                                        </td>
                                        <td>
                                            <div>@post.CreatedAt.ToString("dd/MM/yyyy")</div>
                                            @if (post.IsPublished && post.PublishedAt.HasValue)
                                            {
                                                <small class="text-muted">Pub: @post.PublishedAt.Value.ToString("dd/MM/yyyy")</small>
                                            }
                                        </td>
                                        <td>@post.ViewCount</td>
                                        <td>@post.LikeCount</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Edit", new { id = post.Id })" class="btn btn-sm btn-outline-primary" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a href="/Home/Post?slug=@post.Slug" class="btn btn-sm btn-outline-secondary" target="_blank" title="Visualizar">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDelete('@post.Id', '@post.Title')" title="Excluir">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-file-text display-1 text-muted"></i>
                        <h4 class="mt-3 text-muted">Nenhum post encontrado</h4>
                        <p class="text-muted">Comece criando seu primeiro post!</p>
                        <a href="@Url.Action("Create")" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Criar Primeiro Post
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmação de exclusão -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir o post <strong id="postTitle"></strong>?</p>
                <p class="text-muted">Esta ação não pode ser desfeita.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(postId, postTitle) {
            document.getElementById('postTitle').textContent = postTitle;
            document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + postId;
            
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}
