@model ModernBlog.Models.Post
@{
    ViewData["Title"] = "Criar Post";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Criar Novo Post</h1>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>
</div>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-file-text"></i> Conte√∫do do Post</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">T√≠tulo *</label>
                        <input asp-for="Title" class="form-control" placeholder="Digite o t√≠tulo do post" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Summary" class="form-label">Resumo</label>
                        <textarea asp-for="Summary" class="form-control" rows="3" placeholder="Breve descri√ß√£o do post (opcional)"></textarea>
                        <span asp-validation-for="Summary" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label">Conte√∫do *</label>
                        <div id="content-editor" style="height: 400px;"></div>
                        <textarea asp-for="Content" name="Content" style="display: none;" required></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Publish Settings -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Configura√ß√µes</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
                            <label asp-for="IsPublished" class="form-check-label">
                                Publicar post
                            </label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
                            <label asp-for="IsFeatured" class="form-check-label">
                                Post em destaque
                            </label>
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Salvar Post
                        </button>
                    </div>
                </div>
            </div>

            <!-- Category and Tags -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-tags"></i> Categoriza√ß√£o</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label">Categoria *</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories" required>
                            <option value="">Selecione uma categoria</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Tags</label>
                        <select class="form-select" id="tags-select" multiple="multiple" name="selectedTags">
                            @if (ViewBag.Tags != null)
                            {
                                @foreach (var tag in (IEnumerable<SelectListItem>)ViewBag.Tags)
                                {
                                    <option value="@tag.Value">@tag.Text</option>
                                }
                            }
                        </select>
                        <div class="form-text">Selecione as tags relacionadas ao post</div>
                    </div>
                </div>
            </div>

            <!-- Featured Image -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-image"></i> Imagem Destacada</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="featuredImage" class="form-label">Selecionar Imagem</label>
                        <input type="file" class="form-control" id="featuredImage" name="featuredImage" accept="image/*" />
                        <div class="form-text">
                            Formatos aceitos: JPG, PNG, GIF, WebP<br>
                            Tamanho m√°ximo: 2MB<br>
                            Propor√ß√£o recomendada: 16:9
                        </div>
                    </div>

                    <div id="image-preview" class="d-none">
                        <img id="preview-img" class="img-fluid rounded" style="max-height: 200px;" />
                        <button type="button" class="btn btn-sm btn-outline-danger mt-2" onclick="removeImagePreview()">
                            <i class="bi bi-trash"></i> Remover
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <!-- Quill.js CDN -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <!-- Select2 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    
    <script>
        let quill;
        
        // Initialize when DOM is ready
        $(document).ready(function() {
            console.log('üöÄ Inicializando editor...');
            
            // Initialize Quill editor
            quill = new Quill('#content-editor', {
                theme: 'snow',
                placeholder: 'Escreva o conte√∫do do seu post aqui...',
                modules: {
                    toolbar: [
                        [{ 'header': [1, 2, 3, false] }],
                        ['bold', 'italic', 'underline', 'strike'],
                        [{ 'color': [] }, { 'background': [] }],
                        [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                        [{ 'indent': '-1'}, { 'indent': '+1' }],
                        [{ 'align': [] }],
                        ['blockquote', 'code-block'],
                        ['link', 'image'],
                        ['clean']
                    ]
                }
            });

            console.log('‚úÖ Quill editor inicializado');

            // Initialize Select2 for tags
            $('#tags-select').select2({
                placeholder: 'Selecione as tags',
                allowClear: true,
                tags: true,
                tokenSeparators: [',', ' '],
                createTag: function (params) {
                    var term = $.trim(params.term);
                    if (term === '') {
                        return null;
                    }
                    return {
                        id: term,
                        text: term,
                        newTag: true
                    };
                }
            });

            console.log('‚úÖ Select2 inicializado');
        });

        // Update hidden textarea when form is submitted
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const contentTextarea = document.querySelector('textarea[name="Content"]');
            
            if (form && contentTextarea) {
                form.addEventListener('submit', function(e) {
                    console.log('üîÑ Formul√°rio sendo enviado...');
                    
                    // Sync Quill content
                    if (quill) {
                        const content = quill.root.innerHTML;
                        contentTextarea.value = content;
                        console.log('üìù Conte√∫do sincronizado:', content.length + ' caracteres');
                    }
                    
                    // Basic validation
                    const title = document.querySelector('input[name="Title"]').value;
                    const category = document.querySelector('select[name="CategoryId"]').value;
                    
                    if (!title.trim()) {
                        alert('Por favor, digite um t√≠tulo para o post.');
                        e.preventDefault();
                        return false;
                    }
                    
                    if (!category) {
                        alert('Por favor, selecione uma categoria.');
                        e.preventDefault();
                        return false;
                    }
                    
                    if (!contentTextarea.value.trim() || contentTextarea.value === '<p><br></p>') {
                        alert('Por favor, digite o conte√∫do do post.');
                        e.preventDefault();
                        return false;
                    }
                    
                    console.log('‚úÖ Valida√ß√£o passou, enviando formul√°rio...');
                    return true;
                });
            }
        });

        // Image preview functionality
        document.addEventListener('DOMContentLoaded', function() {
            const featuredImageInput = document.getElementById('featuredImage');
            if (featuredImageInput) {
                featuredImageInput.addEventListener('change', function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            document.getElementById('preview-img').src = e.target.result;
                            document.getElementById('image-preview').classList.remove('d-none');
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }
        });

        function removeImagePreview() {
            const featuredImage = document.getElementById('featuredImage');
            const imagePreview = document.getElementById('image-preview');
            
            if (featuredImage) featuredImage.value = '';
            if (imagePreview) imagePreview.classList.add('d-none');
        }

        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}