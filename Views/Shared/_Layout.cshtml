<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ModernBlog</title>

    <!-- Bootstrap 5.3.2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index" asp-area="">
                    <i class="bi bi-journal-text"></i> ModernBlog
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-area="">In√≠cio</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <!-- Back to Top Button -->
    <button id="back-to-top" class="btn btn-primary position-fixed d-none" style="bottom: 20px; right: 20px; z-index: 1000; border-radius: 50%; width: 50px; height: 50px;">
        <i class="bi bi-arrow-up"></i>
    </button>

    <footer class="bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-journal-text text-primary"></i> ModernBlog
                    </h5>
                    <p class="text-muted mb-3">
                        Plataforma moderna para compartilhar conhecimento, experi√™ncias e insights com a comunidade.
                    </p>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-light hover-primary"><i class="bi bi-facebook fs-5"></i></a>
                        <a href="#" class="text-light hover-primary"><i class="bi bi-twitter fs-5"></i></a>
                        <a href="#" class="text-light hover-primary"><i class="bi bi-linkedin fs-5"></i></a>
                        <a href="#" class="text-light hover-primary"><i class="bi bi-github fs-5"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="fw-bold mb-3">Navega√ß√£o</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/" class="text-muted text-decoration-none hover-light">In√≠cio</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none hover-light">Sobre</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none hover-light">Contato</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none hover-light">Pol√≠tica de Privacidade</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="fw-bold mb-3">Categorias Populares</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none hover-light">Tecnologia</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none hover-light">Neg√≥cios</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none hover-light">Lifestyle</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none hover-light">Educa√ß√£o</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="fw-bold mb-3">Newsletter</h6>
                    <p class="text-muted mb-3">Receba as √∫ltimas atualiza√ß√µes do blog</p>
                    <div class="input-group">
                        <input type="email" class="form-control bg-secondary border-0 text-light" placeholder="Seu e-mail">
                        <button class="btn btn-primary" type="button">
                            <i class="bi bi-envelope"></i>
                        </button>
                    </div>
                    <small class="text-muted">N√£o enviamos spam. Cancele a qualquer momento.</small>
                </div>
            </div>

            <hr class="border-secondary my-4">

            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-muted mb-0">
                        &copy; @DateTime.Now.Year ModernBlog. Todos os direitos reservados.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted mb-0">
                        Desenvolvido com <i class="bi bi-heart-fill text-danger"></i> usando ASP.NET Core
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery - Necess√°rio antes do Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

